<html>
  <head><title>Graphical Passwords OpenID Server</title></head>
  <style type="text/css">
      * {
        font-family: sans-serif;
      }
      body {
        width: 50em;
        margin: 1em;
      }
      div {
        padding: .5em;
      }
      table {
        margin: none;
        padding: none;
      }
      .notice {
        border: 1px solid #60964f;
        background: #b3dca7;
      }
      .error {
        border: 1px solid #ff0000;
        background: #ffaaaa;
      }
      #create-form {
        border: 1px solid #777777;
        background: #dddddd;
        margin-top: 1em;
        padding-bottom: 0em;
      }
      table {
        padding: 1em;
      }
      li {margin-bottom: .5em;}
      span.openid:before {
        content: url(/images/openid_login_bg.gif) ;
      }
      span.openid {
        font-size: smaller;
      }
  </style>
  <%= stylesheet_link_tag 'graphicalPasswords' %>
  <body>



    <% if session[:username] %>
      <div>
        Logged in as <%= session[:username] %> | <%= link_to('Log out', :controller => 'session', :action => 'logout') %><br />
	<span class="openid"><%= openid_url(session[:username]) %></span>
      </div>
    <% end %>


    <% if flash[:notice] or flash[:error] %>
     <div class="<%= flash[:notice].nil? ? 'error' : 'notice' %>">
       <%= flash[:error] or flash[:notice] %>
     </div>
    <% end %>

    <%= @content_for_layout %>


  </body>
</html>
